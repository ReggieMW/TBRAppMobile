<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TBRAppMobile.Pages"
    x:Class="TBRAppMobile.AppShell">

    <FlyoutItem Title="Currently Reading"
            Route="CurrentReadsPage">
        <ShellContent ContentTemplate="{DataTemplate pages:CurrentReadsPage}"/>
    </FlyoutItem>
    
    <FlyoutItem Title="TBR List">
        <ShellContent ContentTemplate="{DataTemplate pages:TBRListPage}"
                Route="TBRListPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Add Book">
        <ShellContent ContentTemplate="{DataTemplate pages:AddBookPage}"
                Route="AddBookPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Read Books"
            Route="ReadListPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ReadListPage}"/>
    </FlyoutItem>


    <FlyoutItem Title="Did Not Finish"
            Route="DNFPage">
        <ShellContent ContentTemplate="{DataTemplate pages:DNFPage}"/>
    </FlyoutItem>

    <FlyoutItem Title="My Canon"
            Route="MyCanonPage">
        <ShellContent ContentTemplate="{DataTemplate pages:MyCanonPage}"/>
    </FlyoutItem>


    <ShellContent Route="tbr"
                  ContentTemplate="{DataTemplate pages:TBRListPage}"/>
</Shell>
