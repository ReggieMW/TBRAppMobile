<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="TBRAppMobile.Pages.TBRListPage"
       Title="TBR List">

       <Grid RowDefinitions="Auto,*"
             Padding="20">
              <Label Text="ðŸ“š Your TBR Pile"
                     FontSize="24"
                     HorizontalOptions="Center"
                     Margin="0,0,0,10"
                     Grid.Row="0"/>
              <Button
                     Text="Add Book"
                     Clicked="OnAddBookClicked"
                     Grid.Row="1"
                     BackgroundColor="#0077cc"
                     TextColor="White"
                     HorizontalOptions="Center"
                     Margin="0,0,0,10"/>
              <CollectionView x:Name="TBRList"
                              Grid.Row="2"
                              ItemsSource="{Binding TBRBooks}"
                              SelectionMode="None">
                     <CollectionView.ItemTemplate>
                            <DataTemplate>
                                   <Frame BorderColor="DarkGray"
                                          CornerRadius="10"
                                          Padding="10"
                                          Margin="5">
                                          <Grid ColumnDefinitions="Auto,*"
                                                ColumnSpacing="10">
                                                 <Image Source="{Binding IconPath}"
                                                        WidthRequest="40"
                                                        HeightRequest="40"
                                                        VerticalOptions="Start"
                                                        Aspect="AspectFit"/>
                                                 <StackLayout Grid.Column="1">
                                                        <Label Text="{Binding Title}"
                                                               FontSize="20"
                                                               FontAttributes="Bold"/>
                                                        <Label Text="{Binding Author}"
                                                               FontSize="16"
                                                               TextColor="DarkSlateGray"/>
                                                        <Label Text="{Binding Pages, StringFormat='ðŸ“– {0} pages'}"
                                                               FontSize="14"/>
                                                        <Label Text="{Binding Subject, StringFormat='ðŸ·ï¸ {0}'}"
                                                               FontSize="14"/>
                                                        <Label Text="{Binding Vibe, StringFormat='ðŸŽ¯ Vibe: {0}'}"
                                                               FontSize="14"/>
                                                        <Label Text="{Binding YearPublished, StringFormat='ðŸ“… {0}'}"
                                                               FontSize="14"/>
                                                        <Label Text="{Binding Country, StringFormat='ðŸŒ {0}'}"
                                                               FontSize="14"/>
                                                        <Label Text="{Binding Source, StringFormat='ðŸ“Œ Source: {0}'}"
                                                               FontSize="14"/>
                                                 </StackLayout>
                                          </Grid>
                                   </Frame>
                            </DataTemplate>
                     </CollectionView.ItemTemplate>
              </CollectionView>
       </Grid>
</ContentPage>

