<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TBRAppMobile.Pages.TBRListPage"
    xmlns:views="clr-namespace:TBRAppMobile.Views"
    Title="TBR List">

    <StackLayout Padding="20">
        <Label Text="ðŸ“š Your TBR Pile"
                FontSize="24"
                HorizontalOptions="Center"/>
        <CollectionView x:Name="TBRListView"
                        ItemsSource="{Binding TBRBooks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:BookCard/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <CollectionView x:Name="TBRCollection"
                ItemsSource="{Binding TBRBooks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5"
                            Padding="10"
                            BackgroundColor="#f0f0f0">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}"
                                    FontAttributes="Bold"
                                    FontSize="18"/>
                            <Label Text="{Binding Author}"
                                    FontSize="14"/>
                            <Label Text="{Binding Pages, StringFormat='Pages: {0}'}"
                                    FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
