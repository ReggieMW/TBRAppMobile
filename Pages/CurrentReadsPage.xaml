<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TBRAppMobile.Views"
    x:Class="TBRAppMobile.Pages.CurrentReadsPage"
    Title="Currently Reading List">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                Spacing="10">
            <Label
                Text="ðŸ“– Currently Reading"
                FontSize="24"
                HorizontalOptions="Center"/>

            <CollectionView
                x:Name="BookList"
                ItemsSource="{Binding CurrentReadBooks}"
                SelectionMode="Single"
                SelectionChanged="OnBookSelected">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <views:BookCard
                            Title="{Binding Title}"
                            Author="{Binding Author}"
                            IconPath="{Binding IconPath}"
                            Pages="{Binding Pages}"
                            Subject="{Binding Subject}"
                            Vibe="{Binding Vibe}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
