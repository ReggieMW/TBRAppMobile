<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBRAppMobile.Pages.AddBookPage"
             Title="Add a Book">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="âž• Add a Book" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="TitleEntry" Placeholder="Title" />
            <Entry x:Name="AuthorEntry" Placeholder="Author" />
            <Entry x:Name="YearEntry" Placeholder="Year Published" Keyboard="Numeric" />
            <Entry x:Name="PagesEntry" Placeholder="Pages" Keyboard="Numeric" />
            <Entry x:Name="CountryEntry" Placeholder="Country" />

            <Label Text="Subject" />
            <Picker x:Name="SubjectPicker"
                    Title="Select a Subject"
                    ItemsSource="{Binding SubjectSuggestions}"
                    SelectedIndexChanged="OnSubjectSelected" />
            <Entry x:Name="SubjectEntry" Placeholder="Or enter your own subject" />

            <Label Text="Vibe" />
            <Picker x:Name="VibePicker"
                    Title="Select a Vibe"
                    ItemsSource="{Binding VibeSuggestions}"
                    SelectedIndexChanged="OnVibeSelected" />
            <Entry x:Name="VibeEntry" Placeholder="Or enter your own vibe" />

            <Label Text="Source" />
            <Picker x:Name="SourcePicker"
                    Title="Select a Source"
                    ItemsSource="{Binding SourceSuggestions}"
                    SelectedIndexChanged="OnSourceSelected" />
            <Entry x:Name="SourceEntry" Placeholder="Or enter your own source" />

            <Button Text="Save Book" Clicked="OnSaveClicked" BackgroundColor="#0077cc" TextColor="White" />

            <Label x:Name="StatusLabel" TextColor="Green" FontSize="14" IsVisible="False" />
        </StackLayout>
    </ScrollView>
</ContentPage>

