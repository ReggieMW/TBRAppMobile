<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TBRAppMobile.Views.BookCard">
    <Frame Padding="10"
           Margin="5"
           CornerRadius="12"
           HasShadow="True"
           BorderColor="LightGray">

        <Grid ColumnDefinitions="auto, *"
              RowDefinitions="auto, auto">

            <Image Grid.RowSpan="2"
                   Source="{Binding IconPath, TargetNullValue='default_book_icon.png'}"
                   HeightRequest="80"
                   WidthRequest="80"
                   Aspect="AspectFill"
                   Margin="0,0,10,0"
                   VerticalOptions="Center" />

            <Label Grid.Column="1"
                   Text="{Binding Title}"
                   FontAttributes="Bold"
                   FontSize="16" />

            <Label Grid.Row="1"
                   Grid.Column="1"
                   Text="{Binding Author}"
                   FontSize="14"
                   TextColor="Gray" />
        </Grid>
    </Frame>
</ContentView>
